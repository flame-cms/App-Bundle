<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">

	<meta name="robots" content="noindex,nofollow">

	<title>{#title|striptags|trim}Flame:CMS{/#} &ndash; Administration</title>

    <link rel="shortcut icon" href="{$baseUrl}/favicon.ico" type="image/x-icon">

	{control css}
	{control js}

	{#head}{/#}
</head>

<body>

<div class="container-fluid">
    <div class="row-fluid"  style="margin-top: 20px;">
        <div class="span2">
				{control navbarBuilder:custom}
        </div>
        <div class="span10">
            <ul class="breadcrumb">

			{foreach $breadCrumbs as $breadcrumb}
            	<li n:class="$iterator->last ? active"><a href="{$breadcrumb->link}">{$breadcrumb->name|firstUpper}</a> {if !$iterator->last}<span class="divider">/</span>{/if}</li>
			{/foreach}
            </ul>

		{control flasheMessages}

		{include #content}

            <hr />
            <footer>
                <p>Powered by <a href="http://projects.jsifalda.name/flame/" target="_blank">Flame</a> 2012.
                    &copy; Created by <a href="http://jsifalda.name/" target="_blank">JSifalda</a></p>
            </footer>
        </div>
    </div>
</div>

</body>
</html>
